{
  "name": "arbor-graph",
  "version": "0.1.0",
  "description": "A tree that remembers your codebase â€” MCP server for Claude Code",
  "license": "MIT",
  "bin": {
    "arbor": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "setup": "pnpm install && pnpm build",
    "dev": "pnpm build && node dist/index.js init --reset && tsx watch src/index.ts",
    "dev:continue": "pnpm build && tsx watch src/index.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "oxlint .",
    "fmt": "oxfmt .",
    "fmt:check": "oxfmt --check .",
    "ci:test": "pnpm install --frozen-lockfile && pnpm build && pnpm lint && pnpm fmt && pnpm fmt:check && pnpm test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "better-sqlite3": "^11.7.0",
    "yaml": "^2.8.2",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.0",
    "@vitest/coverage-v8": "^3.0.0",
    "oxfmt": "^0.31.0",
    "oxlint": "^0.16.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
  }
